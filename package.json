{
    "name": "scss-starter-pack-for-webdesign",
    "version": "1.0.3",
    "main": "index.js",
    "scripts": {
        "watch:sass": "node-sass sass/main.scss css/style.css -w",
        "devserver": "live-server",
        "start": "npm-run-all --parallel devserver watch:sass",
        "compile:sass": "node-sass scss/style.scss css/style.comp.css",
        "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
        "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
        "build:css": "npm-run-all compile:sass prefix:css compress:css"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Tajmirul/glint-portfolio.git"
    },
    "keywords": [
        "scss",
        "starter-pack",
        "Tajmirul-scss"
    ],
    "author": "Tajmirul Islam Akhand",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Tajmirul/glint-portfolio/issues"
    },
    "homepage": "https://github.com/Tajmirul/glint-portfolio#readme",
    "devDependencies": {
        "autoprefixer": "^10.2.5",
        "concat": "^1.0.3",
        "node-sass": "^4.14.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.2.9",
        "postcss-cli": "^8.3.1"
    },
    "description": "",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    }
}
